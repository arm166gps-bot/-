<script>
  let page = 0;
  function go(p) {
    page = p;
    document.getElementById("slider").style.transform = `translateX(-${page * 100}vw)`;
  }

  // ‡∏´‡∏±‡∏ß‡πÉ‡∏à‡∏•‡∏≠‡∏¢‡πÄ‡∏£‡∏∑‡πà‡∏≠‡∏¢‡πÜ
  setInterval(() => {
    let h = document.createElement("div");
    h.className = "heart";
    h.style.left = Math.random() * 100 + "vw";
    h.style.fontSize = (Math.random() * 14 + 12) + "px";
    h.innerHTML = "üíó";
    document.body.appendChild(h);
    setTimeout(() => h.remove(), 4000);
  }, 400);
</script>

